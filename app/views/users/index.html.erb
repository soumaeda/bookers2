<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      
      <table>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
      
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fad fa-user-cog"></i>
        <% end %>
      </div>
      
      <h1>New book</h1>
      <%= form_with model: @book, url: books_path, method: :post do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
	
        <h4>Opinion</h4>
        <%= f.text_area :body %>
	
        <%= f.submit '投稿' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table>
        <thead>
          <th>Image</th>
          <th>Name</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.profile_image, size: "90x90" %>
                <% else %>
                  <%= image_tag 'no_image', size: "90x90" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", "/users/#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

