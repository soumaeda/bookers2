<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user', user: @user %>
      <h1>New book</h1>
      <%= render 'books/book', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "90x90" %>
                <% else %>
                  <%= image_tag 'no_image', size: "90x90" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", "/users/#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

